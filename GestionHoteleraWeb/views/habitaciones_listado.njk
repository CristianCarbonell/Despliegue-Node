{% extends "base.njk" %}

{% block titulo %}Habitaciones | Listado{% endblock %}

{% block contenido %}
    <h1>Listado de habitaciones</h1>
        <div class="row row-cols-1 row-cols-md-3 g-4 py-5">
            {% for habitacion in habitaciones %}
                <div class="col">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Habitación {{habitacion.numero}}</h5>
                            <p class="card-text"><em>Última limpieza {{ habitacion.ultimaLimpieza | date('DD-MM-YYYY') }}</em></p>
                        </div>
                        <div class="mb-5 d-flex justify-content-start">
                            <a class="btn btn-primary" href="/habitaciones/{{ habitacion.id }}">Ver ficha</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
{% endblock %}
