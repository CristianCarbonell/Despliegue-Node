{% extends "base.njk" %}

{% block titulo %}Limpiezas | Nueva{% endblock %}

{% block contenido %}

    <h1>Limpiezas habitaci√≥n {{habitacion.numero}}</h1>

    {% if errores.general %}
        <p class="alert alert-danger">{{ errores.general }}</p>
    {% endif %}

   <form action="/limpiezas/{{ habitacion.id }}" method="post">

        <div class="form-group">
            <label for="fechaLimpieza">Fecha de limpieza:</label>
            <input type="date" id="fechaLimpieza" name="fechaLimpieza" class="form-control" value="{{ fechaActual }}">
        </div>
        <div class="form-group">
            <label for="observaciones">Observaciones:</label>
            <textarea id="observaciones" name="observaciones" class="form-control" placeholder="Observaciones..."></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Enviar</button>
    </form>

{% endblock %}
