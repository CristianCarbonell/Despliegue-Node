{% extends "base.njk" %}

{% block titulo %}Habitaciones | Nueva{% endblock %}

{% block contenido %}

    <h1>Insertar nueva habitación</h1>

    {% if errores.general %}
        <p class="alert alert-danger">{{ errores.general }}</p>
    {% endif %}

    <form action="/habitaciones" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="numero">Número de habitación:</label>
            {% if errores.numero %}
                <p class="text-danger">{{ errores.numero }}</p>
            {% endif %}
            <input type="text" class="form-control" name="numero" 
            placeholder="Número de habitación..." value="{{ datos.numero }}">
        </div>

        <div class="form-group">
            <label for="tipo">Tipo de habitación:</label>
            {% if errores.tipo %}
                <p class="text-danger">{{ errores.tipo }}</p>
            {% endif %}
            <select id="tipo" name="tipo" class="form-control">
                <option value="" disabled selected>Seleccionar tipo de habitación</option>
                <option value="individual">Individual</option>
                <option value="doble">Doble</option>
                <option value="familiar">Familiar</option>
                <option value="suite">Suite</option>
            </select>

        </div>

        <div class="form-group">
            <label for="precio">Precio:</label>
            {% if errores.precio %}
                <p class="text-danger">{{ errores.precio }}</p>
            {% endif %}
            <input type="number" step="0.01" class="form-control" name="precio"
            placeholder="Precio de la habitación..." value="{{ datos.precio }}">
        </div>

        <div class="form-group">
            <label for="descripcion">Descripción:</label>
            {% if errores.descripcion %}
                <p class="text-danger">{{ errores.descripcion }}</p>
            {% endif %}
            <textarea id="descripcion" name="descripcion" class="form-control" placeholder="Descripción de la habitación...">{{ datos.descripcion }}</textarea>
        </div>

        <div class="form-group">
            <label for="imagen">Imagen:</label>
            <input type="file" id="imagen" name="imagen" class="form-control-file">
        </div>

        <button type="submit" class="btn btn-primary">Enviar</button>
    </form>

{% endblock %}